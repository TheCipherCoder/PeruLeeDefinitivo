@model CPresentacion.Models.UsuarioVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(to right, #141E30, #243B55);">

    <div class="card shadow-lg p-4 rounded-4" style="max-width: 400px; width: 100%; background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); color: white;">
        <div class="text-center mb-4">
            <h3 class="fw-bold">Iniciar Sesión</h3>
            <p class="text-light">Accede a tu cuenta</p>
        </div>

        <form asp-controller="Acceso" asp-action="Index" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">Correo Electrónico</label>
                <input type="email" class="form-control border-0 p-2 rounded-3" asp-for="Email" placeholder="ejemplo@email.com">
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Contraseña</label>
                <input type="password" class="form-control border-0 p-2 rounded-3" asp-for="Contrasena" placeholder="********">
            </div>
            <button type="submit" class="btn btn-primary w-100 p-2 rounded-3 fw-bold">Ingresar</button>
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="text-light text-decoration-none fw-semibold">
                    ← Regresar al Inicio
                </a>
            </div>
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
