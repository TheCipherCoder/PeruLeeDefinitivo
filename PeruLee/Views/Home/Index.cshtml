<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2c2c44);
        color: white;
    }

    .hero-section {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: url('/ruta/a/una-imagen-de-libros.jpg') no-repeat center center/cover;
        position: relative;
    }

        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
        }

    .hero-content {
        position: relative;
        z-index: 2;
    }

        .hero-content h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero-content p {
            font-size: 1.2rem;
        }

    .btn-explorar {
        background: #ff9800;
        border: none;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-explorar:hover {
            background: #ffb74d;
            transform: scale(1.05);
        }

    .section {
        padding: 80px 0;
    }

    .card-custom {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
    }

        .card-custom:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(255, 255, 255, 0.2);
        }

    .contact-section {
        background: #222;
        padding: 60px;
        border-radius: 15px;
        text-align: center;
    }

    .contact-details p {
        font-size: 1.1rem;
        margin: 10px 0;
    }

    .iframe-container {
        margin-top: 20px;
        border-radius: 10px;
        overflow: hidden;
    }

    .img-fixed {
        height: 200px;
        object-fit: cover;
    }
</style>

