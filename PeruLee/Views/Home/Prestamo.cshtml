@{
    ViewData["Title"] = "Préstamo de Libro";
}

<section class="section text-center">
    <div class="container">
        <h2 class="fw-bold text-uppercase" data-aos="fade-up">Préstamo de Libros</h2>
        <p class="lead" data-aos="fade-up" data-aos-delay="100">
            Completa el formulario para solicitar el préstamo de un libro.
        </p>

        <form method="post" asp-controller="Home" asp-action="Prestamo" class="mt-4">
            <div class="row">
                <div class="col-md-4">
                    <label for="idUsuario" class="form-label">ID Usuario</label>
                    <input type="number" class="form-control" id="idUsuario" name="idUsuario" required>
                </div>
                <div class="col-md-4">
                    <label for="idLibro" class="form-label">ID Libro</label>
                    <input type="number" class="form-control" id="idLibro" name="idLibro" required>
                </div>
                <div class="col-md-4">
                    <label for="fechaDevolucion" class="form-label">Fecha de Devolución</label>
                    <input type="date" class="form-control" id="fechaDevolucion" name="fechaDevolucion" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Solicitar Préstamo</button>
        </form>

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-info mt-3">@ViewBag.Mensaje</div>
        }
    </div>
</section>